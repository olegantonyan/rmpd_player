C_INCLUDES += -IFreeRTOS-Plus-CLI/
C_INCLUDES += -IInc
C_INCLUDES += -Iapp

C_GLOBAL_INCLUDES = -include stdbool.h

# compile gcc flags
ASFLAGS = $(MCU) $(AS_DEFS) $(AS_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections

CFLAGS = $(MCU) $(C_DEFS) $(C_INCLUDES) $(OPT) -Wall -fdata-sections -ffunction-sections -std=c11 -Werror $(C_GLOBAL_INCLUDES)

ifeq ($(DEBUG), 1)
CFLAGS += -g -gdwarf-2
endif


# Generate dependency information
CFLAGS += -MMD -MP -MF"$(@:%.o=%.d)"


#######################################
